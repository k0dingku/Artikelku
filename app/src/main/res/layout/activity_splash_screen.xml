<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F2ED"
    android:gravity="center"
    tools:context=".Activity.SplashScreen">


    <ImageView
        android:id="@+id/logo_splash_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo_artikelku"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARTIKELKU"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/logo_splash_screen"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSplash"
        android:textColor="@color/colorNavBar"
        />

</RelativeLayout>