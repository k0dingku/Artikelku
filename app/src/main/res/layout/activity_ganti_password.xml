<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBG"
    tools:context=".Activity.GantiPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/edit_password_lama"
                android:textColor="@color/colorNavBar"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_gantiPassword_passwordLama"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight"
                android:background="@drawable/background_search_view"
                android:fontFamily="@font/montserrat_light"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/colorNavBar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/edit_password_baru"
                android:textColor="@color/colorNavBar"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_gantiPassword_passwordBaru"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:singleLine="true"
                android:layout_height="@dimen/etHeight"
                android:background="@drawable/background_search_view"
                android:fontFamily="@font/montserrat_light"
                android:paddingLeft="10dp"
                android:textColor="@color/colorNavBar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/edit_ulangiPasswordBaru"
                android:textColor="@color/colorNavBar"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_gantiPassword_ulangiPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/etHeight"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@drawable/background_search_view"
                android:fontFamily="@font/montserrat_light"
                android:paddingLeft="10dp"
                android:textColor="@color/colorNavBar" />

        </LinearLayout>





    </LinearLayout>

    <Button
        android:id="@+id/btn_gantiPassword"
        android:layout_width="@dimen/btnWidth"
        android:layout_height="@dimen/btnHeight"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/square_red_button"
        android:gravity="bottom"
        android:text="@string/btnGanti"
        android:textColor="@color/colorFontWhite"
        android:textAlignment="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

</RelativeLayout>